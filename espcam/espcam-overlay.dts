
/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			espcam@11 {
				compatible = "espcam,espcam0";
				reg = <0x11>;
				status = "okay";
			};
		};
	};

	fragment@1 {
		target = <&spi0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			espcamv@0 {
				compatible = "espcam,vid";
				reg = <0>;
			};
		};
	};
};
